public class Dice {
    private int numSides;
    private int faceValue;

    public Dice() {
        numSides = 6;
        faceValue = 1;
    }

    public Dice(int sides) {
        numSides = sides;
        faceValue = 1;
    }

    public int roll() {
        faceValue = (int)(Math.random() * numSides) + 1;
        return faceValue;
    }

    public int getFaceValue() {
        return faceValue;
    }

    public int getNumSides() {
        return numSides;
    }

    public String toString() {
        return "Dice with " + numSides + " sides, current face: " + faceValue;
    }
}
